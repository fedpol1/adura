execute if score @s adura.selected matches 0 run title @s actionbar {"text":"Save","bold":true,"color":"#5fdf5f"}
execute if score @s adura.selected matches 1 run title @s actionbar {"text":"Actionbar Status","bold":true,"color":"#7f007f"}
execute if score @s adura.selected matches 2 run title @s actionbar {"text":"Urgent Flasher Status","bold":true,"color":"#7f007f"}
execute if score @s adura.selected matches 3 run title @s actionbar {"text":"Caution Flasher Status","bold":true,"color":"#7f007f"}
execute if score @s adura.selected matches 4 run title @s actionbar {"text":"Urgent Threshold","bold":true,"color":"#7f007f"}
execute if score @s adura.selected matches 5 run title @s actionbar {"text":"Caution Threshold","bold":true,"color":"#7f007f"}
execute if score @s adura.selected matches 6 run title @s actionbar {"text":"Denominator","bold":true,"color":"#7f007f"}
execute if score @s adura.selected matches 7.. run title @s actionbar {"text":"-","bold":true,"color":"#ff0000"}
